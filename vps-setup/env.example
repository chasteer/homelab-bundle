# Homelab VPS Configuration
# Скопируйте этот файл в .env и заполните своими значениями

# Telegram Bot настройки
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# API безопасность (опционально)
API_SECRET_KEY=your_secret_key_here

# Окружение
ENVIRONMENT=production

# Логирование
LOG_LEVEL=INFO

# Домен VPS
VPS_DOMAIN=your-vps-domain.com

# Настройки безопасности
ALLOWED_ORIGINS=http://your-local-ip,https://your-homelab-domain.com

# Настройки логирования
MAX_LOG_SIZE=10485760
LOG_RETENTION_DAYS=30

# Настройки API
MAX_REQUEST_SIZE=1048576
REQUEST_TIMEOUT=30
